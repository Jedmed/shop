  <% include ../partials/header %>
    <nav class="navbar navbar-light bg-light d-flex justify-content-end">
      <a href="/shop/<%= shop.id %>" class="navbar-brand">Go Back</a>
    </nav>
    <div class="row">
      <div class="col sub-header">
        <h2>Edit Product: <%= shop.name %></h2>
      </div>
    </div>
    <form action="/shop/<%= shop.id %>?_method=PUT" method="POST">
      <div class="row form">
        <div class="col-md-6 col-12">
          <div class="row">
            <div class="col-md-3 col-4 text-right">
              <label class="text-right">Name:</label>
            </div>
            <div class="col-md-9 col-8">
              <input type="text" name="name" value="<%= shop.name %>"/>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 col-4 text-right">
              <label class="text-right">Description: </label>
            </div>
            <div class="col-md-9 col-8">
              <textarea type="textarea" name="description"><%= shop.description %></textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 col-4 text-right">
              <label class="text-right">Image: </label>
            </div>
            <div class="col-md-9 col-8">
              <input type="url" name="img" value="<%= shop.img %>" />
            </div>
          </div>
        </div>
        <div class="col-md-6 col-12">
          <div class="row">
            <div class="col-md-3 col-4 text-right">
              <label class="text-right">Price: </label>
            </div>
            <div class="col-md-3 col-8">
              <input type="number" name="price" min="0" value="<%= shop.price %>" />
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 col-4 text-right">
              <label class="text-right">Quantity: </label>
            </div>
            <div class="col-md-3 col-8">
              <input type="number" name="qty" min="0" value="<%= shop.qty %>" />
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="row d-flex justify-content-center">
            <div class="col-md-3 col-6">
              <input class="btn btn-dark" type="submit" value="Edit Product" />
            </div>
          </div>
        </div>
      </div>
    </form>
    <% include ../partials/footer %>
